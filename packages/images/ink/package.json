{
  "name": "@aprovan/patchwork-ink",
  "version": "0.1.0",
  "description": "Patchwork image: Ink terminal UI for CLI widgets",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runner": {
      "types": "./dist/runner.d.ts",
      "import": "./dist/runner.js"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "import": "./dist/setup.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "patchwork": {
    "platform": "cli",
    "esbuild": {
      "target": "node20",
      "format": "esm",
      "jsx": "automatic"
    }
  },
  "dependencies": {
    "react": "^18.0.0",
    "ink": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-link": "^4.0.0",
    "ink-box": "^2.0.0",
    "chalk": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
