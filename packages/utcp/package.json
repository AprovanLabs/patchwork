  },
  "peerDependencies": {
    "@aprovan/patchwork": "workspace:*"
  },
  "devDependencies": {
    "@aprovan/patchwork": "workspace:*",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
